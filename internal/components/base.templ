package components

import (
	"checkpoint/internal/components/chat"
	"checkpoint/internal/components/comments"
	"checkpoint/internal/components/util"
	"time"
)

templ Base() {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="utf-8"/>
			<meta name="viewport" content="width=device-width,initial-scale=1"/>
			<title>Checkpoint</title>
			<link rel="stylesheet" href="/assets/css/output.css"/>
			<script type="module" src="/assets/js/datastar.js"></script>
		</head>
		<body>
			@util.ErrorModal()
			<header>
				@Nav()
			</header>
			<main class="flex flex-wrap justify-center bg-base-100 ">
				<div class="max-w-6xl" id="content">
					{ children... }
				</div>
			</main>
			@Footer()
		</body>
	</html>
}

