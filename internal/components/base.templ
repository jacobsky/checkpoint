templ Footer() {
	<footer class="bottom-0 footer footer-horizontal footer-center bg-base-100 text-base-content-300 items-center py-4">
		<nav class="grid grid-flow-col gap-4">
			<p>Powered by:</p>
			<a class="link link-hover" href="https://go.dev/">go</a>
			<a class="link link-hover" href="https://github.com/a-h/templ">templ</a>
			<a class="link link-hover" href="https://datastar.dev/">datastar</a>
			<a class="link link-hover" href="https://daisyui.com">daisyui</a>
		</nav>
		<aside>
			<p>
				> An Apparently Typing Project
				<br/>
				Copyright (c) { time.Now().Format("2006") } jacobsky. All Rights Reserved.
			</p>
		</aside>
	</footer>
}

templ UserJoin() {
	<p>Tell us your name, come and take a seat and chat</p>
	<div role="group">
		<input
			type="text"
			data-bind:nickname
			data-text="$nickname"
			data-on:keydown="evt.key === 'Enter' && @get('/join')"
		/>
		<button data-on:click="@get('/join')">Join</button>
	</div>
}

templ MainContent() {
	@Base() {
		<section id="main">
			<div class="grid">
				<div>
					This is a small space that I made dedicated to one of my favorite pieces of internet culture referred to as
					the
					Internet Checkpoint. If you stumbled your way here, I would greatly appreciate if you would leave a comment
					or
					message.
				</div>
				<div>
					<button data-on:click="@get('/showmessages')">Message Board</button>
					<button data-on:click="@get('/showchat')">Live Chat</button>
				</div>
			</div>
		</section>
	}
}

templ ChatContent() {
	@Base() {
		<section id="main">
			@chat.ChatBox()
		</section>
	}
}

templ MessageBoardContent() {
	@Base() {
		<section id="main">
			@comments.MessageBoard(nil)
		</section>
	}
}

templ Landing() {
	@Base() {
		<section id="main">
			@UserJoin()
		</section>
		<!-- <audio></audio>-->
	}
}
